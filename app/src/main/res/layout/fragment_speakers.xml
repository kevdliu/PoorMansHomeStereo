<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/auto_add"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="Auto Discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/qr_capture"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/auto_add"
            android:text="Scan QR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/manual_add"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/qr_capture"
            android:layout_alignParentRight="true"
            android:text="Manual Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/speakers_list"
            android:layout_below="@+id/auto_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/loading"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Discovering Speakers..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>