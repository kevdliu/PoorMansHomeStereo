<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@mipmap/ic_speakers"
        android:contentDescription="@string/desc_icon"
        android:layout_width="84dp"
        android:layout_height="84dp" />

    <TextView
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon"
        android:layout_toLeftOf="@+id/volume"
        android:layout_toStartOf="@+id/volume"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/address"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon"
        android:layout_toLeftOf="@+id/volume"
        android:layout_toStartOf="@+id/volume"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.twinblade.poormanshomestereo.ClickableImageView
        android:id="@+id/volume"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@mipmap/ic_volume"
        android:clickable="true"
        app:click_tint="@drawable/click_tint"
        android:layout_width="45dp"
        android:layout_height="45dp" />

</RelativeLayout>