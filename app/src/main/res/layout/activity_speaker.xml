<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_speaker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.twinblade.poormanshomestereo.SpeakerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="[Current song]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:id="@+id/current_song_info" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:layout_above="@+id/current_song_info"
            android:layout_centerHorizontal="true"
            android:id="@+id/current_song_img"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_song_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp">
            <ImageView
                android:id="@+id/previous"
                app:srcCompat="@mipmap/ic_back"
                android:padding="5dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_toLeftOf="@+id/play_pause"/>
            <ImageView
                android:id="@+id/play_pause"
                app:srcCompat="@mipmap/ic_play"
                android:padding="5dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/next"
                android:padding="5dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:srcCompat="@mipmap/ic_next"
                android:layout_toRightOf="@+id/play_pause" />



        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
